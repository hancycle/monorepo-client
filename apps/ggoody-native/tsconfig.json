{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@ggoody-native/constants": ["./constants"],
      "@ggoody-native/constants/*": ["./constants/*"],
      "@ggoody-native/ui": ["./ui"],
      "@ggoody-native/ui/*": ["./ui/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
